rec func is_even (n:int | n >= 0) :
  (ret: bool | ((n % 2 = 0) => ret) && ((n % 2 != 0) => !ret)) =

  if n = 0 { true }
  else { is_odd (n - 1) }

rec func is_odd (n:int | n >= 0) :
  (ret: bool | ((n % 2 = 0) => !ret) && ((n % 2 != 0) => ret)) =
  
  if n = 0 { false }
  else { is_even (n - 1) }

